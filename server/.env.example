# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lucidledger_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Server Configuration
PORT=5001
NODE_ENV=development

# Demo Mode
# Controls demo-related features (banners, etc.)
DEMO_MODE=true

# CORS Configuration
# Frontend URL for CORS origin
CORS_ORIGIN=http://localhost:5173

# ============================================
# Privy JWT Verification (REQUIRED)
# ============================================
# Get your App ID from https://dashboard.privy.io/
PRIVY_APP_ID=your_privy_app_id
# Privy App Secret (used to verify admin)
PRIVY_APP_SECRET=your_privy_app_secret
# JWKS URL + Issuer are used to validate Privy access tokens
PRIVY_JWKS_URL=your_privy_jwks_url
PRIVY_ISSUER=privy.io

# ============================================
# Admin Configuration
# ============================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com,admin2@example.com
