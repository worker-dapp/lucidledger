# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lucidledger_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Server Configuration
PORT=5001
NODE_ENV=development

# Demo Mode
# Controls demo-related features (banners, etc.)
DEMO_MODE=true

# CORS Configuration
# Frontend URL for CORS origin
CORS_ORIGIN=http://localhost:5173

# ============================================
# Dynamic Labs JWT Verification (REQUIRED)
# ============================================
# Get your environment ID from https://app.dynamic.xyz/
# This is used to verify JWT signatures from Dynamic Labs
DYNAMIC_LABS_ENVIRONMENT_ID=your_dynamic_env_id

# ============================================
# Admin Configuration
# ============================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com,admin2@example.com
